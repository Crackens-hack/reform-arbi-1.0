# /app/dev/bash/.bash_gitprompt

# Indicadores de estado en el prompt git
export GIT_PS1_SHOWDIRTYSTATE=1      # ✚ staged, ✱ unstaged
export GIT_PS1_SHOWUNTRACKEDFILES=1  # ✭ untracked
export GIT_PS1_SHOWSTASHSTATE=1      # $ stash
export GIT_PS1_SHOWUPSTREAM=auto     # ↑ ahead, ↓ behind, ↕ diverged
export GIT_PS1_DESCRIBE_STYLE=branch # rama si detached (en vez de tag/describe)

# Opcional: oculta el segmento git si el cwd está ignorado
# export GIT_PS1_HIDE_IF_PWD_IGNORED=1

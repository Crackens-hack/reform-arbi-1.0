# /app/dev/bash/.bash_env

# Historial sin duplicados y más grande
export HISTCONTROL=ignoredups:erasedups
export HISTSIZE=5000
export HISTFILESIZE=10000

# Busca en historial con ↑ ↓ según prefijo
bind '"\e[A": history-search-backward'
bind '"\e[B": history-search-forward'

# Calidad de vida
export EDITOR=vim
export PAGER=less
export LESS='-R'

# (Opcional) PATH extra
# export PATH="/app/bin:$PATH"

# Colores para ls sin usar dircolors
#export LS_COLORS="di=34:ln=36:so=35:pi=33:ex=32:bd=46;34:cd=43;34:su=41;30:sg=46;30:tw=42;30:ow=43;30"

#alias ls='ls --color=auto'

# Detectar si 'ls' es BusyBox o GNU coreutils
if ls --version >/dev/null 2>&1; then
  # GNU coreutils ls → activar colores + LS_COLORS si querés customizar
  alias ls='ls --color=auto'
  # Colores estilo Ubuntu (si no querés, comentá esta línea)
  export LS_COLORS="di=01;34:ln=01;36:so=01;35:pi=33:ex=01;32:bd=46;34:cd=43;34:su=41;30:sg=46;30:tw=42;30:ow=43;30"
else
  # BusyBox ls → ya tiene colores hardcodeados, no hace falta tocar nada
  alias ls='ls --color=auto'
fi
